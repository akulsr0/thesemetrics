{
  "include": ["src", "@types"],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "strict": true,

    "target": "ES2020",
    "module": "ESNext",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
